<?php
/**
* @file
* Play with the Form API.
*/
/**
* Implements hook_menu().
*/
function signup_menu() {
$items['signup'] = array(
'title' => 'Sign Up',
'page callback' => 'drupal_get_form',
'page arguments' => array('signup_signupform'),
'access callback' => TRUE,
'type' => MENU_NORMAL_ITEM
);
return $items;
}
/**
* Define a form.
*/


function signup_signupform() {
	$form['first_name'] = array(
	'#title' => t('First Name'),
	'#type' => 'textfield',
	'#required' => true
	);
	$form['company_name'] = array(
	'#title' => t('Company'),
	'#type' => 'textfield',
	'#required' => true
	);
	$form['last_name'] = array(
	'#title' => t('Last Name'),
	'#type' => 'textfield',
	'#required' => true
	);
	$form['email'] = array(
	'#title' => t('Email'),
	'#type' => 'textfield',
	'#required' => true,
	'#element_validate' => array('myelement_email_validate')
	);
	$form['phone'] = array(
	'#title' => t('Phone'),
	'#type' => 'textfield',
	'#required' => false
	);
	$form['submit'] = array(
	'#type' => 'submit',
	'#value' => t('Submit')
	);
	return $form;
}


/**
* Validate the form.
*/
function myelement_email_validate($element, &$form_state, $form) {
  $value = $element['#value'];
  if (!valid_email_address($value)) {
    form_error($element, t('Please enter a valid email address.'));
  }
}
function signup_signupform_validate($form, &$form_state) {

}
/**
* Handle post-validation form submission.
*/
function signup_signupform_submit($form, &$form_state) {
$name = $form_state['values']['first_name'];
drupal_set_message(t('Thanks for filling out the form, %name',
array('%name' => $name)));
}




